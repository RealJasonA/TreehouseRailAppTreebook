
<div class="row">
  <div class="span4">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>
      
      <fieldset>
        <legend>Sign In</legend>

      <%= f.input :email %>
      <%= f.input :password %>



      <!-- All this is replaced by the 2 lines above via SimpleForm
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div> -->

      <% if devise_mapping.rememberable? %>

        <div class="field">
          
    <!--Is replaced by one line below to make checkbox
        <%= f.check_box :remember_me %>  
        <%= f.label :remember_me %>
    --> 

        <%= f.input :remember_me, as: :boolean %>
        </div>

      <% end -%>

      <div class="actions">
        <%= f.button :submit, "Log in" %>
      </div>

    </fieldset>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>

  <div class="span8">
    <h2>Signing in!!! Yay</h2>
  </div>

</div>
